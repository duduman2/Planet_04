-- 이클립스내에 있는  DTO 


-- 테이블 admininfo
DROP TABLE admininfo
DROP SEQUENCE admininfo_seq;
CREATE TABLE admininfo (
    adminno NUMBER PRIMARY KEY -- 
    , adminid VARCHAR2(20) -- 
    , adminPw VARCHAR2(20) -- 
);
CREATE SEQUENCE admininfo_seq;

-- 테이블 askboard
DROP TABLE askboard;
DROP SEQUENCE askboard_seq;
CREATE TABLE askboard (
    askBoard NUMBER PRIMARY KEY -- 
    , u_no NUMBER REFERENCES userinfo -- 
    , categoryNo NUMBER REFERENCES storyboard -- 
    , askContent VARCHAR2(100) -- 
    , askDate DATE -- 
);
CREATE SEQUENCE askboard_seq;


-- 테이블 askboardcomm
DROP TABLE askboardcomm;
DROP SEQUENCE askboardcomm_seq;
CREATE TABLE askboardcomm (
    askBoardNo NUMBER PRIMARY KEY -- 
    , askCommNo NUMBER -- 
    , commContent VARCHAR2(100) -- 
    , commDate DATE -- 
);
CREATE SEQUENCE askboardcomm_seq;


-- 테이블 boardinfo     PRIMARY KEY???어디에?
DROP TABLE boardinfo;
DROP SEQUENCE boardinfo_seq;
CREATE TABLE boardinfo (
    u_id  VARCHAR2(20) REFERENCES userinfo  -- 
    , u_nick  VARCHAR2(20) -- 
    , userRank NUMBER  --
    , boardNo NUMBER -- 
    , boardTitle VARCHAR2(40) -- 
    , boardContent VARCHAR2(100) --  
    , boardDate DATE -- 
    , boardHit NUMBER -- 
);
CREATE SEQUENCE boardinfo_seq;


-- 테이블 carlist
DROP TABLE carlist;
DROP SEQUENCE carlist_seq;
CREATE TABLE carlist (

);
CREATE SEQUENCE carlist_seq;


-- 테이블 cart
DROP TABLE cart;
DROP SEQUENCE cart_seq;
CREATE TABLE cart (
    carNo NUMBER PRIMARY KEY -- 
    , u_no NUMBER -- 
    , totalPrice NUMBER -- 
    , paymentDate DATE -- 
);
CREATE SEQUENCE cart_seq;


-- 테이블 cartinfo
DROP TABLE cartinfo;
DROP SEQUENCE cartinfo_seq;
CREATE TABLE cartinfo (
    cartNo NUMBER PRIMARY KEY -- 
    , categoryName VARCHAR2(20) -- 
    , productPrice NUMBER -- 
    , productCheck NUMBER -- 
    , paymentDate DATE -- 
);
CREATE SEQUENCE cartinfo_seq;


-- 테이블 message
DROP TABLE message;
DROP SEQUENCE message_seq;
CREATE TABLE message (
    messageNo NUMBER PRIMARY KEY -- 
    , receiverName VARCHAR2(20) -- 
    , division NUMBER -- 
    , msgDate DATE -- 
    , msgContent VARCHAR2(100) -- 
    , senderNBame VARCHAR2(20) --  
    , memberNo NUMBER -- 
);
CREATE SEQUENCE message_seq;



-- 테이블 paramdata
DROP TABLE paramdata;
DROP SEQUENCE paramdata_seq;
CREATE TABLE paramdata (
    datano NUMBER PRIMARY KEY -- 
    , title VARCHAR2(40) -- 
    , data1 VARCHAR2(100) -- 
    , data2 VARCHAR2(100) -- 
);
CREATE SEQUENCE paramdata_seq;


-- 테이블 storyboard
DROP TABLE storyboard;
DROP SEQUENCE storyboard_seq;
CREATE TABLE storyboard (
    storyBoard NUMBER PRIMARY KEY -- 
    , u_no NUMBER REFERENCES userinfo  -- 
    , categoryNo NUMBER -- 
    , storyContent VARCHAR2(100) -- 
    , storyWriteDate DATE -- 
    , showLevel NUMBER --  //회원등급-int로 해도되나?String말고?(default 새싹,열매,,,)
);
CREATE SEQUENCE storyboard_seq;


-- 테이블 storyfile
DROP TABLE storyfile;
DROP SEQUENCE storyfile_seq;
CREATE TABLE storyfile (
    storyFileNo NUMBER PRIMARY KEY -- 
    , storyNo NUMBER -- 
    , storyOriginFileName VARCHAR2(20) -- 
    , storyRenameFileName VARCHAR2(20) -- 
);
CREATE SEQUENCE storyfile_seq;


-- 테이블 uploadfile
DROP TABLE uploadfile;
DROP SEQUENCE uploadfile_seq;
CREATE TABLE uploadfile (
    fileno NUMBER PRIMARY KEY -- 
    , originName VARCHAR2(20) -- 
    , storedName VARCHAR2(20) -- 
    , filePath VARCHAR2(0) -- 
);
CREATE SEQUENCE uploadfile_seq;

-- 테이블 userinfo
DROP TABLE userinfo;
DROP SEQUENCE userinfo_seq;
CREATE TABLE userinfo (
    u_no NUMBER PRIMARY KEY -- 
    , u_id VARCHAR2(20) -- 
    , u_pw VARCHAR2(20) -- 
    , u_name VARCHAR2(20) -- 
    , u_birth DATE -- 
    , u_gender VARCHAR2(10) --  
    , u_phone NUMBER -- 
    , u_email VARCHAR2(50) -- 
    , u_address VARCHAR2(50) -- 
    , u_nick VARCHAR2(20) --  
    , u_join_date DATE -- 
    , u_trade_user VARCHAR2(20) -- 
    , b_business_number NUMBER -- 
);
CREATE SEQUENCE userinfo_seq;

